{
  "name": "contracts-internal",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "module": "./src/index.ts",
      "require": "./lib/index.js",
      "types": "./src/index.ts"
    }
  },
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "format": "prettier --cache --log-level warn --check .",
    "format:fix": "prettier --cache --log-level warn --write .",
    "format:fix:nocache": "prettier --log-level warn --write .",
    "generate-config": "tsx scripts/generate-config.ts && prettier --log-level warn --write src/config.ts && eslint --quiet --fix src/config.ts",
    "generate-contracts": "tsx scripts/generate-contracts.ts && prettier --log-level warn --write src/contracts-foundry.ts && eslint --quiet --fix src/contracts-foundry.ts",
    "lint": "concurrently \"pnpm format\" \"pnpm lint:ts\" \"pnpm type-check\"",
    "lint:fix": "concurrently \"pnpm format:fix\" \"pnpm lint:ts:fix\" \"pnpm type-check\"",
    "lint:fix:nocache": "concurrently \"pnpm format:fix:nocache\" \"pnpm lint:ts:fix:nocache\" \"pnpm type-check\"",
    "lint:ts": "eslint --cache --quiet .",
    "lint:ts:fix": "eslint --cache --quiet --fix .",
    "lint:ts:fix:nocache": "eslint --quiet --fix .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "pnpm type-check --watch"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint-config-astaria": "workspace:*",
    "prettier-config-astaria": "workspace:*",
    "tsconfig": "workspace:*",
    "tsx": "^4.7.3",
    "typescript": "^5.4.5"
  }
}
